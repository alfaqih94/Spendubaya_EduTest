<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/logo_edutest"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:contentDescription="Logo"
        android:src="@drawable/ikon_aplikasi" />

    <Button
        android:id="@+id/tombol_cek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_edutest"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tombol_masuk"
        android:elevation="20dp"
        android:padding="5dp"
        android:text="@string/Login_text"
        android:fontFamily="@font/cherrybomb"
        android:textColor="@color/Putih"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_2"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/version"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:fontFamily="@font/adlam"
        android:textColor="@color/Orange"
        />
    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol_cek"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="@font/adlam"
        android:textColor="@color/Orange"
        android:textSize="15sp"
        android:text="@string/dev"
        />


</RelativeLayout>